{
  "name": "@morpho-org/pandvil",
  "description": "A testing environment for ponder that supports chain forking via anvil",
  "version": "0.0.14",
  "author": "Morpho Association <contact@morpho.org>",
  "contributors": [
    "Hayden Shively <hayden@morpho.xyz>"
  ],
  "repository": "https://github.com/morpho-org/pandvil.git",
  "homepage": "https://github.com/morpho-org/pandvil",
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./playwright": "./dist/fixtures/playwright.js",
    "./vitest": "./dist/fixtures/vitest.js"
  },
  "bin": {
    "pandvil": "./dist/bin/cli.js"
  },
  "files": [
    "dist",
    "Dockerfile.with-your-app",
    "docker-bake.hcl"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "prepare": "husky || true",
    "prepack": "pnpm run build",
    "build": "tsup",
    "lint": "eslint .",
    "typecheck": "tsc",
    "docker:build": "bash scripts/prune.sh && docker buildx bake -f docker-bake.hcl pandvil"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.17.1",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.3",
    "hono": "^4.8.8",
    "pg": "^8.16.3",
    "pidtree": "^0.6.0",
    "portfinder": "^1.0.37",
    "zod": "^4.0.10"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "^14.0.0",
    "@eslint/js": "^9.32.0",
    "@morpho-org/test": "^2.1.5",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.1.0",
    "@types/pg": "^8.15.4",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-next": "^0.6.0",
    "eslint-plugin-import-x": "^4.16.1",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "neonctl": "^2.15.0",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "viem": "^2.34.0",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "@morpho-org/test": "^2.0.0",
    "@playwright/test": "^1.50.0",
    "viem": "^2.0.0",
    "vitest": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "@morpho-org/test": {
      "optional": true
    },
    "@playwright/test": {
      "optional": true
    },
    "viem": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  },
  "packageManager": "pnpm@10.13.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
